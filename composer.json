{
    "name": "sinergi/project",
    "type": "library",
    "description": "Project Dependency Workflow",
    "keywords": ["Dependency", "Workflow"],
    "homepage": "https://github.com/sinergi/project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Bull",
            "email": "me@gabrielbull.com"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4",
        "composer/composer": "1.0.*@dev"
    },
    "autoload": {
        "psr-4": {
            "Sinergi\\Project\\": "src/Project"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sinergi\\Project\\Tests\\": ["tests/Project/Tests", "tests/Project/Tests/_includes"]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Sinergi\\Project\\Setup::setupAutoloader",
            "Sinergi\\Project\\Setup::setupPhpStorm"
        ]
    }
}